<% @posts.each do |post| %>
      <div class="row">
        <div class="col-sm-12">
            <h2><%= post.title %></h2>
            <%= post.description %>
        

          <span>
            <%= post.category.name %>
          </span>
          <%= post.all_tags %>
        </div>
     </div>
<hr>
<% end %>
